{
  "name": "jascha030/wpolib",
  "description": "WP OOP Library for plugin development",
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Jascha030\\Wpolib\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jascha030\\Wpolib\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Jascha030",
      "email": "contact@jaschavanaalst.nl"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "psr/container": "^1.1",
    "pimple/pimple": "^3.4"
  },
  "config": {
    "platform": {
      "php": "7.4"
    }
  },
  "scripts": {
    "phpunit": "vendor/bin/phpunit",
    "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes"
  }
}
